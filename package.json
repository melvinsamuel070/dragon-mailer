{
  "name": "dragonmailer",
  "version": "1.0.0",
  "scripts": {
    "test": "jest --coverage",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "commitlint": "commitlint --edit",
    "check": "npm run lint && npm test"
  },
  "dependencies": {
    "commitlint": "^19.6.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.1",
    "nodemailer": "^6.7.7",
    "nodemon": "^3.1.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.18.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
